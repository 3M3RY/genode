REP_DIR = $(TUP_CWD)

ifeq (@(TUP_ARCH),i386)
CPPFLAGS += -I$(REP_DIR)/include/spec/x86_32
CPPFLAGS += -I$(REP_DIR)/include/spec/x86
endif

ifeq (@(TUP_ARCH),x86_64)
CPPFLAGS += -I$(REP_DIR)/include/spec/x86_64
CPPFLAGS += -I$(REP_DIR)/include/spec/x86
endif

ifeq (@(TUP_ARCH),arm)
CPPFLAGS += -I$(REP_DIR)/include/spec/arm
endif

CPPFLAGS += -I$(REP_DIR)/include

CXXFLAGS += -std=gnu++17

LIBS += genode-base
