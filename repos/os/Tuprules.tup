REP_DIR = $(TUP_CWD)

ifeq (@(TUP_ARCH),i386)
INCLUDES += -I$(REP_DIR)/include/spec/x86_32
INCLUDES += -I$(REP_DIR)/include/spec/x86
endif

ifeq (@(TUP_ARCH),x86_64)
INCLUDES += -I$(REP_DIR)/include/spec/x86_64
INCLUDES += -I$(REP_DIR)/include/spec/x86
endif

ifeq (@(TUP_ARCH),arm)
INCLUDES += -I$(REP_DIR)/include/spec/arm
endif

INCLUDES += -I$(REP_DIR)/include
