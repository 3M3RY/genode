<runtime ram="80M" caps="1500" binary="init">

	<requires>
		<nitpicker/>
		<nic/>
		<timer/>
		<file_system label="target" writeable="yes"/>
	</requires>

	<content>
		<rom label="curl.lib.so"/>
		<rom label="fetchurl"/>
		<rom label="init"/>
		<rom label="ld.lib.so"/>
		<rom label="libc.lib.so"/>
		<rom label="libcrypto.lib.so"/>
		<rom label="libm.lib.so"/>
		<rom label="libpng.lib.so"/>
		<rom label="libssh.lib.so"/>
		<rom label="libssl.lib.so"/>
		<rom label="machine.vbox"/>
		<rom label="machine.vdi"/>
		<rom label="menu_view"/>
		<rom label="menu_view_styles.tar"/>
		<rom label="nit_fb"/>
		<rom label="posix.lib.so"/>
		<rom label="pthread.lib.so"/>
		<rom label="report_rom"/>
		<rom label="terminal"/>
		<rom label="terminal_log"/>
		<rom label="vfs_import.lib.so"/>
		<rom label="vfs.lib.so"/>
		<rom label="vfs_lwip.lib.so"/>
		<rom label="zlib.lib.so"/>
	</content>

	<config>
		<parent-provides>
			<service name="CPU"/>
			<service name="LOG"/>
			<service name="Nic"/>
			<service name="PD"/>
			<service name="RM"/>
			<service name="ROM"/>
			<service name="File_system"/>
			<service name="Nitpicker"/>
			<service name="Timer"/>
		</parent-provides>
	
		<default-route> <any-service> <parent/> <any-child/> </any-service> </default-route>
	
		<default caps="100"/>

		<start name="report_rom">
			<resource name="RAM" quantum="1M"/>
			<provides> <service name="Report"/> <service name="ROM"/> </provides>
			<config>
				<policy label="menu_view -> dialog" report="download -> dialog"/>
			</config>
			<route>
				<any-service> <parent/> </any-service>
			</route>
		</start>

		<start name="menu_view" caps="200">
			<resource name="RAM" quantum="8M"/>
			<config>
				<libc stderr="/dev/log"/>
				<vfs>
					<tar name="menu_view_styles.tar" />
					<dir name="dev"> <log/> </dir>
					<dir name="fonts"> <fs label="fonts"/> </dir>
				</vfs>
			</config>
			<route>
				<service name="ROM" label="dialog"> <child name="report_rom" /> </service>
				<service name="File_system" label="fonts"> <parent label="fonts"/> </service>
				<any-service> <parent/> <any-child/> </any-service>
			</route>
		</start>

		<start name="download" caps="500">
			<binary name="fetchurl"/>
			<resource name="RAM" quantum="32M"/>
			<config>
				<report dialog="yes"/>
				<vfs>
					<dir name="dev">
						<log/> <null/>
						<inline name="rtc">2018-10-22 00:00</inline>
						<inline name="random">01234567890123456789</inline>
					</dir>
					<dir name="socket"> <lwip dhcp="yes"/> </dir>
					<dir name="target"> <fs label="target"/> </dir>
					<import>
						<dir name="target">
							<dir name="tails">
								<rom name="machine.vbox"/>
								<rom name="machine.vdi"/>
							</dir>
						</dir>
					</import>
				</vfs>
				<libc stdout="/dev/log" stderr="/dev/log" rtc="/dev/rtc" socket="/socket"/>
				<fetch url="https://mirrors.wikimedia.org/tails/stable/tails-amd64-3.9.1/tails-amd64-3.9.1.iso.sig"
				       path="/target/tails/installer.iso.sig" retry="3"/>
				<fetch url="https://mirrors.wikimedia.org/tails/stable/tails-amd64-3.9.1/tails-amd64-3.9.1.iso"
				       path="/target/tails/installer.iso" retry="3"/>
			</config>
			<route>
				<service name="File_system" label="target">
					<parent label="target"/> </service>
				<service name="Report"> <child name="report_rom"/> </service>
				<any-service> <parent/> </any-service>
			</route>
		</start>
	</config>

</runtime>
