<runtime ram="24M" caps="384" binary="init">

	<requires> <nitpicker/> <timer/> </requires>

	<provides> <nitpicker/> <report/> <rom/> </provides>

	<content>
		<rom label="ld.lib.so"/>
		<rom label="report_rom"/>
		<rom label="wm"/>
	</content>

	<config>
		<parent-provides>
			<service name="CPU"/>
			<service name="LOG"/>
			<service name="PD"/>
			<service name="ROM"/>
			<service name="Nitpicker"/>
			<service name="Timer"/>
		</parent-provides>
		<service name="Nitpicker">
			<default-policy> <child name="wm"/> </default-policy>
		</service>
		<service name="ROM">
			<default-policy> <child name="report_rom"/> </default-policy>
		</service>
		<service name="Report" label_suffix=" -> window_layout">
			<default-policy>
				<child name="report_rom" label="window_layout"/>
			</default-policy>
		</service>
		<service name="Report" label_suffix=" -> decorator_margins">
			<default-policy>
				<child name="report_rom" label="decorator_margins"/>
			</default-policy>
		</service>
		<service name="Report" label_suffix=" -> hover">
			<default-policy>
				<child name="report_rom" label="hover"/>
			</default-policy>
		</service>
		<service name="Report" label_suffix=" -> focus">
			<default-policy>
				<child name="report_rom" label="focus"/>
			</default-policy>
		</service>
		<service name="Report" label_suffix=" -> resize_request">
			<default-policy>
				<child name="report_rom" label="resize_request"/>
			</default-policy>
		</service>
		<start name="report_rom" caps="128">
			<resource name="RAM" quantum="4M"/>
			<provides>
				<service name="Report"/>
				<service name="ROM"/>
			</provides>
			<config>
				<policy label_suffix="pointer"           report="wm -> pointer"/>
				<policy label_suffix="window_layout"     report="window_layout"/>
				<policy label_suffix="decorator_margins" report="decorator_margins"/>
				<policy label_suffix="focus_request"     report="wm -> focus_request"/>
				<policy label_suffix="hover"             report="hover"/>
				<policy label_suffix="window_list"       report="wm -> window_list"/>
				<policy label="wm -> focus"              report="focus"/>
				<policy label="wm -> resize_request"     report="resize_request"/>
			</config>
			<route> <any-service> <parent/> </any-service> </route>
		</start>
		<start name="wm" caps="256">
			<resource name="RAM" quantum="6M"/>
			<provides>
				<service name="Nitpicker"/>
			</provides>
			<config>
				<policy label_prefix="decorator" role="decorator"/>
				<policy label_prefix="layouter"  role="layouter"/>
			</config>
			<route>
				<service name="ROM" label="resize_request"> <child name="report_rom"/> </service>
				<service name="ROM" label="focus">          <child name="report_rom"/> </service>
				<service name="Report">                     <child name="report_rom"/> </service>
				<any-service> <parent/> </any-service>
			</route>
		</start>
	</config>

</runtime>
